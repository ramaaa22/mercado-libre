<div id="<%= dom_id sale %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Date:</strong>
    <%= sale.date %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Client:</strong>
    <%= sale.client %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Number:</strong>
    <%= sale.number %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Article:</strong>
    <%= sale.article %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Probably date:</strong>
    <%= sale.probably_date %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Date returned:</strong>
    <%= sale.date_returned %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Notes:</strong>
    <%= sale.notes %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this sale", sale, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this sale', edit_sale_path(sale), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
