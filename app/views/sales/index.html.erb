<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Sales</h1>
    <%= link_to 'New sale', new_sale_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <div class="relative overflow-x-auto">
    <div class="pb-4 bg-white dark:bg-gray-900">
          <label for="table-search" class="sr-only">Search</label>
          <div class="relative mt-1">
              <div class="absolute inset-y-0 left-0 flex items-center pl-3 pointer-events-none">
                  <svg class="w-5 h-5 text-gray-500 dark:text-gray-400" aria-hidden="true" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M8 4a4 4 0 100 8 4 4 0 000-8zM2 8a6 6 0 1110.89 3.476l4.817 4.817a1 1 0 01-1.414 1.414l-4.816-4.816A6 6 0 012 8z" clip-rule="evenodd"></path></svg>
              </div>
              <input type="text" id="table-search" class="block p-2 pl-10 text-sm text-gray-900 border border-gray-300 rounded-lg w-80 bg-gray-50 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" placeholder="Search for items">
          </div>
    </div>
    <table class="w-full text-sm text-left text-gray-500 dark:text-gray-400">
        <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
            <tr>
                <th scope="col" class="px-6 py-3">
                    Fecha
                </th>
                <th scope="col" class="px-6 py-3">
                    Venta
                </th>
                <th scope="col" class="px-6 py-3">
                    Cliente
                </th>
                <th scope="col" class="px-6 py-3">
                    Articulo
                </th>
                <th scope="col" class="px-6 py-3">
                    Fecha probable de recepci√≥n
                </th>
                <th scope="col" class="px-6 py-3">
                    Fecha recibido
                </th>
                <th scope="col" class="px-6 py-3">
                    Notas
                </th>
            </tr>
        </thead>
        <tbody>
          <% @sales.each do |sale| %>
            <% if sale.date_returned? %>
              <tr class="bg-yellow-500 border-b border-yellow-400">
            <% else %>
              <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700">
            <% end  %>
                <th scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white">
                    <%= sale.date%>
                </th>
                <td class="px-6 py-4">
                  <%= link_to sale.number, edit_sale_path(sale), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
                </td>
                <td class="px-6 py-4">
                    <%= sale.client%>
                </td>
                <td class="px-6 py-4">
                    <%= sale.article%>
                </td>
                <td class="px-6 py-4">
                    <%= sale.probably_date%>
                </td>
                <td class="px-6 py-4">
                    <%= sale.date_returned%>
                </td>
                <td class="px-6 py-4">
                    <%= sale.notes%>
                </td>
            </tr>
          <% end %>
        </tbody>
    </table>
</div>

</div>
